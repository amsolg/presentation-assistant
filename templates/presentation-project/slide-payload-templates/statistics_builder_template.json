  "validation_rules": {
    "required_fields": ["style", "statistics"],
    "style_validation": {
      "type": "enum",
      "allowed_values": ["blue_line", "grey_line", "three_stats", "four_stats", "four_stats_lines"]
    },
    "statistics_validation": {
      "type": "array",
      "min_items": 2,
      "max_items": 4,
      "item_validation": {
        "required_fields": ["value", "label"],
        "value_max_length": 20,
        "label_max_length": 50
      }
    },
    "statistics_count_per_style": {
      "blue_line": 2,
      "grey_line": 2,
      "three_stats": 3,
      "four_stats": 4,
      "four_stats_lines": 4
    },
    "title_validation": {
      "type": "string",
      "max_length": 100,
      "required": false
    }
  },
